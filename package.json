    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "moment": "^2.27.0",
    "mongodb": "^3.5.6",
    "mongoose": "^5.9.10",
    "react-dropzone": "^11.0.2",
    "react-papaparse": "^3.4.0",
