{
  "name": "finance-tracker",
  "version": "1.0.0",
  "description": "Personal Finance tracker",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
